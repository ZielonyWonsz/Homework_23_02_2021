
package com.company;
import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
        //Zadanie 4
        System.out.println("Czy może być istnieć trójkąt o przeciwprostokątnej boku 3?");
        System.out.println();
        System.out.println("Sprawdzę to dla ciebie ;)");
        System.out.println();
        Scanner scanner = new Scanner(System.in);
        System.out.println("Podaj liczbę 1");
        int a = scanner.nextInt();
        System.out.println("Podaj liczbę 2");
        int b = scanner.nextInt();
        System.out.println("Podaj liczbę 3");
        int c = scanner.nextInt();
        if (a + b > c) {
            System.out.println("Tak");
        }
        else
        {
            System.out.println("Nie");
        }}}

