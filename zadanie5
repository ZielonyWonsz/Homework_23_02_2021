package com.company;
import java.util.Scanner;

public class Main {

    //Zadanie 5
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.println("Który dziś dzień tygodnia?");
        int day = scanner.nextInt();

      if(day == 1) {
          System.out.println("Mhm Czyili Poniedziałek");
      } else if (day == 2) {
          System.out.println("Mhm Czyili Wtorek");
      } else if (day == 3) {
          System.out.println("Mhm Czyili Środa");
      } else if (day == 4) {
          System.out.println("Mhm Czyili Czwartek");
      } else if (day == 5) {
          System.out.println("Mhm Czyili Piątek");
      } else if (day == 6) {
          System.out.println("Mhm Czyili Sobota");
      } else if (day == 7) {
          System.out.println("Mhm Czyili Niedziela");
      }
    }
    }
